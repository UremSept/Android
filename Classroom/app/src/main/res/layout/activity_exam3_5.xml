<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.houjie.learn.exam3_5">
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exam3_5_edit1"
        android:text="请输入您所在的单位"
        android:textSize="20dp"
        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exam3_5_edit2"
        android:layout_below="@+id/exam3_5_edit1"
        android:editable="false"
        android:text="www.hnist.cn"
        android:textSize="20dp"
        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exam3_5_edit3"
        android:layout_below="@+id/exam3_5_edit2"
        android:text="请输入电话号码"
        android:phoneNumber="true"
        android:textColorHint="#FFFF0000"
        android:selectAllOnFocus="true"
        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exam3_5_edit4"
        android:layout_below="@id/exam3_5_edit3"
        android:text="请输入密码"
       android:password="true"
        android:textColorHint="#FFFF0000"
        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exam3_5_edit5"
        android:layout_below="@id/exam3_5_edit4"
        />
</RelativeLayout>
